# Production .env dosyası örneği
# Bu dosyayı .env olarak kopyalayın ve gerçek değerlerle doldurun

# Uygulama Ortamı
APP_ENV=production

# Site URL Ayarları
SITE_URL=https://yourdomain.com/kisisel_qr
SITE_NAME="Kisisel QR"

# Veritabanı Ayarları - GERÇEKLERİ GİRİN
DB_HOST=localhost
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_secure_password

# Güvenlik Anahtarları - GÜVENLİ ANAHTAR OLUŞTURUN
APP_SECRET_KEY=your_secret_key_here

# WhatsApp İletişim
WHATSAPP_NUMBER="905xxxxxxxxx"

# Banka Bilgileri
BANK_NAME="Your Bank Name"
BANK_ACCOUNT_NAME="Your Name"
BANK_IBAN="TRXX XXXX XXXX XXXX XXXX XXXX XX"

# Debug ayarları
DEBUG_MODE=false
LOG_ERRORS=true
